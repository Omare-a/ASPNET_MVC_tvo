<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script defer src="https://kit.fontawesome.com/41c8b474e2.js" crossorigin="anonymous"></script>
    @if (!string.IsNullOrEmpty(ViewData["Title"]?.ToString()))
    { 
        <title> @ViewData["Title"] - Silicon</title>
    }
    else
    {
        <title>Silicon</title>
    }
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
</head>
<body>
    <div class="wrapper">
        @await Html.PartialAsync("~/Views/Shared/HeadFootSection/_Header.cshtml")

        <main>
            @RenderBody()
        </main>

        @await Html.PartialAsync("~/Views/Shared/HeadFootSection/_Footer.cshtml")

       
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
    <script src="~/js/site.js"></script>
</body>
</html>


